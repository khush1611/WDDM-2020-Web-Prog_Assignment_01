<section class="section-form">
    <h2 class="heading text-capitalize text-center">sign up</h2>
    <form action="post" class="form-login">
        <div class="form-login__inputbox">
            <label for="name" class="text-capitalize">name</label>
            <input type="text" id="name" class="form-login__input input_field" placeholder="Enter name address" required>
        </div>

        <div class="form-login__inputbox">
            <label for="email" class="text-capitalize">email</label>
            <input type="email" id="email" class="form-login__input input_field" placeholder="Enter e-mail address" required>
        </div>

         <div class="form-login__inputbox">
            <label for="address" class="text-capitalize">address</label>
            <input type="text" id="address" class="form-login__input input_field" placeholder="Enter home adress">
        </div>

        <div class="form-login__inputbox">
            <label for="password" class="text-capitalize">password</label>
            <input type="password" id="password" class="form-login__input input_field" placeholder="Enter password" required>
        </div>

        <div class="form-login__inputbox">
            <label for="Cpassword" class="text-capitalize">confirm password</label>
            <input type="password" id="Cpassword" class="form-login__input input_field" placeholder="Confirm password" required>
        </div>

        <button value="submit" class="button">Submit</button>
    </form>
 </section> <!-- section form-->