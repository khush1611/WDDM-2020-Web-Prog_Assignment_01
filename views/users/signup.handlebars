<section class="section-form">
    <h2 class="heading text-capitalize text-center">sign up</h2>
     {{#each errorMessages}}
        <div class="errors">{{this}}</div>
    {{/each}}
    <form action="/users/signup-form" class="form-login" method="POST">
        <div class="form-login__inputbox">
            <label for="name" class="text-capitalize">name</label>
            <input type="text" id="name" name="name" class="form-login__input input_field" placeholder="Enter name">
        </div>

         <div class="form-login__inputbox">
            <label for="username" class="text-capitalize">Username</label>
            <input type="text" id="username" name="username" class="form-login__input input_field" placeholder="Enter username">
        </div>

        <div class="form-login__inputbox">
            <label for="email" class="text-capitalize">email</label>
            <input type="email" id="email" name="email" class="form-login__input input_field" placeholder="Enter e-mail address">
        </div>

         <div class="form-login__inputbox">
            <label for="address" class="text-capitalize">address</label>
            <input type="text" id="address" name="address" class="form-login__input input_field" placeholder="Enter home adress">
        </div>

        <div class="form-login__inputbox">
            <label for="password" class="text-capitalize">password</label>
            <input type="password" id="password" name="password" class="form-login__input input_field" placeholder="Enter password">
        </div>

        <div class="form-login__inputbox">
            <label for="Cpassword" class="text-capitalize">confirm password</label>
            <input type="password" id="Cpassword" name="cpassword" class="form-login__input input_field" placeholder="Confirm password">
        </div>

        <button value="submit" class="button">Submit</button>
    </form>
 </section> <!-- section form-->